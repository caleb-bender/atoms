<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <PackageId>CalebBender.Atoms</PackageId>
    <Version>1.0.1</Version>
    <Authors>Caleb Bender</Authors>
    <Company>Caleb Bender</Company>
    <Description>A flexible .NET Core ORM for SQL Server that is atomic and thread-safe</Description>
    <PackageReleaseNotes>Add link to GitHub repository and add package icon.</PackageReleaseNotes>
    <PackageIconUrl>https://github.com/caleb-bender/atoms/AtomsIcon.JPG</PackageIconUrl>
    <RepositoryUrl>https://github.com/caleb-bender/atoms</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
  </PropertyGroup>
  
  <PropertyGroup>
    <TargetFramework>net6.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Newtonsoft.Json" Version="9.0.1" />
    <PackageReference Include="System.Data.SqlClient" Version="4.8.5" />
  </ItemGroup>

</Project>
